<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <!-- Judul -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajukan Laporan"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Peringatan -->
    <TextView
        android:id="@+id/tvWarning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mohon Tidak Memberikan Laporan Palsu!"
        android:textSize="14sp"
        android:textColor="#FF0000"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_marginTop="8dp" />

    <!-- Label Foto -->
    <TextView
        android:id="@+id/tvFotoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lampirkan foto :"
        android:textSize="16sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/tvWarning"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_marginTop="16dp"/>

    <!-- ImageView Foto -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#EEEEEE"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/tvFotoLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_marginTop="8dp"/>

    <!-- Button Upload -->
    <Button
        android:id="@+id/btnUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Foto"
        android:backgroundTint="#4CAF50"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_marginTop="16dp"/>

    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        app:layout_constraintTop_toBottomOf="@id/btnUpload"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_marginTop="16dp"/>

    <!-- Label Tanggal -->
    <TextView
        android:id="@+id/tvTanggalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal Lapor :"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_marginTop="16dp"/>

    <!-- Input Tanggal -->
    <EditText
        android:id="@+id/etDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Klik untuk memilih tanggal"
        android:focusable="false"
        android:inputType="none"
        app:layout_constraintTop_toBottomOf="@id/tvTanggalLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_marginTop="8dp"/>

    <!-- Label Lokasi -->
    <TextView
        android:id="@+id/tvLokasiLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lokasi Lengkap :"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/etDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_marginTop="16dp"/>

    <!-- Input Lokasi -->
    <EditText
        android:id="@+id/etLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan lokasi lengkap"
        app:layout_constraintTop_toBottomOf="@id/tvLokasiLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_marginTop="8dp"/>

    <!-- Label Isi Laporan -->
    <TextView
        android:id="@+id/tvIsiLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Isi Laporan :"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/etLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_marginTop="16dp"/>

    <!-- Input Isi Laporan -->
    <EditText
        android:id="@+id/etReport"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:hint="Deskripsikan laporan Anda"
        android:gravity="top"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@id/tvIsiLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_marginTop="8dp"/>

    <!-- Tombol Kirim -->
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Kirim Laporan"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4CAF50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etReport"
        app:layout_goneMarginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
