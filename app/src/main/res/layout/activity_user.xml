<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- HEADER PROFIL DENGAN TEKS 2 BARIS + LOGO DI POJOK KANAN -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <!-- Ikon Profil -->
            <ImageView
                android:id="@+id/profileIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/profie"
                android:contentDescription="Ikon Profil"
                android:layout_marginEnd="12dp" />

            <!-- Teks Vertikal: Selamat Datang + Masuk -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvWelcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selamat Datang"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tvLoginLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Akun"
                    android:textColor="#D32F2F"
                    android:textStyle="bold"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Logo pojok kanan atas -->
            <ImageView
                android:id="@+id/logoApp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_logo"
                android:contentDescription="Logo Aplikasi" />
        </LinearLayout>

        <!-- Judul -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jelajahi Bumi Lestari"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:textAlignment="viewStart" />

        <!-- Deskripsi -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temukan berbagai aksi nyata dan inspiratif untuk menjaga kelestarian lingkungan hidup, mulai dari pelaporan masalah-masalah lingkungan seperti sampah, polusi udara, hingga kerusakan ekosistem, hingga menjelajahi beragam ide gaya hidup hijau yang ramah bumi. Melalui aplikasi ini, kamu tidak hanya dapat menyampaikan aspirasi dan keluhanmu, tetapi juga ikut terlibat dalam kampanye perubahan positif bersama komunitas yang peduli. Bersama-sama, kita bisa membentuk masa depan bumi yang lebih bersih, sehat, dan berkelanjutan demi generasi yang akan datang."
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:textColor="#444444"
            tools:ignore="HardcodedText" />

        <!-- Tombol Laporan -->
        <TextView
            android:id="@+id/btnLapor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laporkan Masalah di Sini !"
            android:textColor="#000000"
            android:textStyle="bold"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="start"
            android:textSize="16sp"
            android:background="@android:color/transparent" />

        <!-- Placeholder 2 kotak hijau -->
        <View
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_card_gradient" />

        <View
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_card_gradient" />

        <View
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_card_gradient" />
    </LinearLayout>
</ScrollView>
